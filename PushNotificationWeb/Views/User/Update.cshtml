<!DOCTYPE html>
<html lang="en">
<head>
    <title>Düzce Üniversitesi Giriş Ekranı </title>
    <!-- Meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Gaze Sign up & login Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <script>
        addEventListener("load", function () { setTimeout(hideURLbar, 0); }, false); function hideURLbar() { window.scrollTo(0, 1); }
    </script>
    <!-- Meta tags -->
    <!--stylesheets-->
    <link href="/SignIn/css/style.css" rel='stylesheet' type='text/css' media="all">
    <!--//style sheet end here-->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" rel="stylesheet">
</head>
<body>
    <div class="mid-class">
        <div class="art-right-w3ls">
            <h2>Kullanıcı Güncelle</h2>
            <form action="#" method="post">
                <div class="main">
                    <div class="form-left-to-w3l">
                        @using (Html.BeginForm("Update", "User", FormMethod.Post))
                        {
                            @Html.LabelFor(v => v.Id, new{@style = "color:white"})
                            @Html.TextBoxFor(v => v.Id, new{@class = "form-control", @readonly="readonly"})

                            @Html.LabelFor(v => v.FirstName, new{@style = "color:white"})
                            @Html.TextBoxFor(v => v.FirstName, new{@class = "form-control"})

                            @Html.LabelFor(v => v.LastName, new{@style = "color:white"})
                            @Html.TextBoxFor(v => v.LastName, new{@class = "form-control"})

                            @Html.LabelFor(v => v.Email, new{@style = "color:white"})
                            @Html.TextBoxFor(v => v.Email, new{@class = "form-control"})

                            @Html.LabelFor(v => v.PhoneNumber, new{@style = "color:white"})
                            @Html.TextBoxFor(v => v.PhoneNumber, new{@class = "form-control"})

                            @Html.LabelFor(v => v.DeviceToken, new{@style = "color:white"})
                            @Html.TextBoxFor(v => v.DeviceToken, new{@class = "form-control"})

                            <label for="Recipient" style="color:white">Görev:</label>
                            <!--Burda partial view cagırılacak.-->
                            <div id="roledropdown"></div>
                            <br />

                            <button class="btn btn-warning">Güncelle</button>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts{
    <script type="text/javascript">
        $(function () {

            $.ajax({
                type: "GET",
                url: "@Url.Action("DropdownRole","User")?name=Name",
                success: function (jsReturnArgs) {

                    $("#roledropdown").html(jsReturnArgs);
                }
            });

        });
    </script>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Düzce Üniversitesi Giriş Ekranı </title>
    <!-- Meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Gaze Sign up & login Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <script>
        addEventListener("load", function () { setTimeout(hideURLbar, 0); }, false); function hideURLbar() { window.scrollTo(0, 1); }
    </script>
    <!-- Meta tags -->
    <!--stylesheets-->
    <link href="/SignIn/css/style.css" rel='stylesheet' type='text/css' media="all">
    <!--//style sheet end here-->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" rel="stylesheet">
</head>
<body>
    <div class="mid-class">
        <div class="art-right-w3ls">
            <h2>Email Gönder</h2>
            <form action="#" method="post">
                <div class="main">
                    <div class="form-left-to-w3l">
                        @using (Html.BeginForm("SendEmail", "DirectAnnouncement", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label for="Sender" style="color:white">Gönderen:</label>
                                @Html.TextBoxFor(v=>v.Sender,new{@class="form-control"})
                            </div>

                            <div class="form-group">
                                <label for="Recipient" style="color:white">Alıcı:</label>
                                <!--Burda partial view cagırılacak.-->
                                <div id="emaildropdown"></div>
                            </div>

                            <div class="form-group">
                                <label for="Subject" style="color:white">Konu:</label>
                                @Html.TextBoxFor(v=>v.Subject,new{@class="form-control"})
                            </div>

                            <div class="form-group">
                                <label for="Message" style="color:white">İçerik:</label>
                                @Html.TextAreaFor(v=>v.Message,new{@class="form-control"})
                            </div>

                            <button type="submit" class="btn btn-primary">Gönder</button>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}

@section Scripts{
    <script type="text/javascript">
        $(function () {

            $.ajax({
                type: "GET",
                url: "@Url.Action("DropdownEmail","User")?name=Recipient",
                success: function (jsReturnArgs) {

                    $("#emaildropdown").html(jsReturnArgs);
                }
            });

        });
    </script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Düzce Üniversitesi Giriş</title>
    <!-- Meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Gaze Sign up & login Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <script>
        addEventListener("load", function () { setTimeout(hideURLbar, 0); }, false); function hideURLbar() { window.scrollTo(0, 1); }
    </script>
    <!-- Meta tags -->
    <!--stylesheets-->
    <link href="SignIn/css/style.css" rel='stylesheet' type='text/css' media="all">
    <!--//style sheet end here-->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" rel="stylesheet">
</head>
<body>
    <div class="mid-class">
        <div class="art-right-w3ls">
            <h2>Kayıt Ol Ve Giriş Yap</h2>
            @using(Html.BeginForm("Login","UserRoleRelation",FormMethod.Post)){
                <div class="main">
                    <div class="form-left-to-w3l">
                        <input type="text" name="UserId" placeholder="User ID" required="">
                    </div>
                    <div class="form-left-to-w3l ">
                        <input type="password" name="Password" placeholder="Şifre" required="">
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="left-side-forget">
                    <input type="checkbox" class="checked">
                    <span class="remenber-me">Beni Hatırla </span>
                </div>
                <div class="right-side-forget">
                    <a href="#" class="for">Şifremi Unuttum...?</a>
                </div>
                <div class="clear"></div>
                <div class="btnn">
                    <button type="submit">Giriş Yap</button>
                </div>
            }
            <div class="w3layouts_more-buttn">
                <h3>
                    Üye Değil Misin..?
                    <a href="#content1">
                        Üye Olmak İçin Tıkla
                    </a>
                </h3>
            </div>
            <!-- popup-->
            <div id="content1" class="popup-effect">
                <div class="popup">
                    <!--login form-->
                    <div class="letter-w3ls">
                        @using (Html.BeginForm("Index", "UserRoleRelation", FormMethod.Post))
                        {
                            <div class="text-center">
                                <h1 class="display-4">Üye Ol</h1> <br /><br />

                                <label for="input1">İsim:</label>
                                @Html.TextBoxFor(v=>v.FirstName,new{@class="form-control"})

                                <label for="input2">Soyisim:</label>
                                @Html.TextBoxFor(v=>v.LastName,new{@class="form-control"})

                                <label for="input4">Email:</label>
                                @Html.TextBoxFor(v=>v.Email,new{@class="form-control"})

                                <label for="input5">Telefon Numarası:</label>
                                @Html.TextBoxFor(v=>v.PhoneNumber,new{@class="form-control"})

                                <label for="input6">Device Token:</label>
                                @Html.TextBoxFor(v=>v.DeviceToken,new{@class="form-control"})

                                <label for="Recipient">Görev:</label>
                                <!--Burda partial view cagırılacak.-->
                                <div id="roledropdown"></div>

                                 <button type="submit">Üye Ol</button>
                            </div>
                        }
                        <div class="clear"></div>
                    </div>
                    <!--//login form-->
                    <a class="close" href="#">&times;</a>
                </div>
            </div>
            <!-- //popup -->
        </div>
        @* <div class="art-left-w3ls">
            <h1 class="header-w3ls">
                Düzce Üniversitesi Giriş Ekranı
            </h1>
        </div> *@
    </div>
</body>
</html>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}

@section Scripts{
    <script type="text/javascript">
        $(function () {

            $.ajax({
                type: "GET",
                url: "@Url.Action("DropdownRole","UserRoleRelation")?name=Name",
                success: function (jsReturnArgs) {

                    $("#roledropdown").html(jsReturnArgs);
                }
            });

        });
    </script>
}
@{
    Layout = "_UserLayout";
}

@using PushNotificationDbEntities;
@model List<Announcement>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Kenburns, Amira - Creative Multipurpose Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="http://via.placeholder.com/30x30">

    <!-- Template CSS Files -->
    <link rel="stylesheet" type="text/css" href="/amira/amira-creative-multipurpose-template/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/amira/amira-creative-multipurpose-template/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="/amira/amira-creative-multipurpose-template/css/magnific-popup.css" />
    <link rel="stylesheet" type="text/css" href="/amira/amira-creative-multipurpose-template/css/style.css" />
    <link rel="stylesheet" type="text/css" href="/amira/amira-creative-multipurpose-template/css/skins/yellow.css" />

    <!-- Revolution Slider CSS Files -->
    <link rel="stylesheet" type="text/css" href="/amira/amira-creative-multipurpose-template/js/plugins/revolution/css/settings.css" />
    <link rel="stylesheet" type="text/css" href="/amira/amira-creative-multipurpose-template/js/plugins/revolution/css/layers.css" />
    <link rel="stylesheet" type="text/css" href="/amira/amira-creative-multipurpose-template/js/plugins/revolution/css/navigation.css" />

    <!-- Template JS Files -->
    <script src="/amira/amira-creative-multipurpose-template/js/modernizr.js"></script>

</head>

<body class="double-diagonal dark">
    <!-- Page Wrapper Starts -->
    <div class="wrapper">
        <!-- Portfolio Section Starts -->
        <section class="portfolio">
            <!-- Container Starts -->
            <div class="container">
                <!-- Main Heading Starts -->
                <div class="text-center top-text">
                    <h1><span>TÜM</span> DUYURULAR</h1>
                    <h4>DUYURULARDAN ANINDA HABERDAR OLMAK İÇİN MOBİL CİHAZINIZDAN KAYIT OLUN</h4>
                </div>
                <!-- Main Heading Starts -->
                <!-- Divider Starts -->
                <div class="divider text-center">
                    <span class="outer-line"></span>
                    <span class="fa fa-image" aria-hidden="true"></span>
                    <span class="outer-line"></span>
                </div>
                <!-- Divider Ends -->
                <!-- Filter Wrapper Starts -->
                <nav>
                    <ul class="simplefilter nav nav-pills">
                        <!-- Filter Wrapper Items Starts -->
                        <li class="active" data-filter="all"><i class="fa fa-reorder"></i> DUYURULAR</li>
                        <!-- Filter Wrapper Items Ends -->
                    </ul>
                </nav>
                <!-- Filter Wrapper Ends -->
                <div>
                    <div class="filtr-container">
                        <!-- Project Starts -->

                        @foreach (var announcement in Model)
                        {
                            <div class="col-xs-12 col-sm-4 col-md-4 filtr-item" data-category="1">
                                <div class="magnific-popup-gallery">
                                    <!-- Thumbnail Starts -->
                                    <figure class="thumbnail thumbnail__portfolio">
                                        <a class="image-wrap" href="@announcement.PhotoUrl" data-gal="magnific-pop-up[image]"><img class="img-responsive" src="@announcement.PhotoUrl" alt="Image Project" /><span class="zoom-icon"></span></a>
                                    </figure>
                                    <!-- Thumbnail Ends -->
                                    <!-- Caption Starts -->
                                    <div class="caption">
                                        <a class="title-link" href="image-project.html">
                                            @if(announcement.Title.Length > 30)
                                            {
                                                <h3>@announcement.Title.Substring(0,30) ...</h3>
                                            }

                                            @if(announcement.Title.Length <= 30)
                                            {
                                                 <h3>@announcement.Title</h3>
                                            }
                                        </a>
                                        @if (announcement.Body.Length > 100)
                                        {
                                            <p>@announcement.Body.Substring(0,100) ...</p>
                                        }

                                        @if (announcement.Body.Length <= 100)
                                        {
                                            <p>@announcement.Body</p>
                                        }
                                        <a class="custom-button" href="/Home/AnnouncementDetails/@announcement.Id">DEVAMINI OKU...</a>
                                    </div>
                                    <!-- Caption Ends -->
                                </div>
                            </div>
                        }
                        <!-- Project Ends -->
                        
                    </div>
                </div>
            </div>
            <!-- Container Ends -->
        </section>
        <!-- Portfolio Section Ends -->
    </div>
    <!-- Wrapper Ends -->
    <!-- Template JS Files -->
    <script src="/amira/amira-creative-multipurpose-template/js/jquery-2.2.4.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/jquery.easing.1.3.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/bootstrap.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/jquery.bxslider.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/jquery.filterizr.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/jquery.magnific-popup.min.js"></script>

    <!-- Revolution Slider Main JS Files -->
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/jquery.themepunch.tools.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/jquery.themepunch.revolution.min.js"></script>

    <!-- Revolution Slider Extensions -->

    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/extensions/revolution.extension.actions.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/extensions/revolution.extension.carousel.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/extensions/revolution.extension.kenburn.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/extensions/revolution.extension.layeranimation.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/extensions/revolution.extension.migration.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/extensions/revolution.extension.navigation.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/extensions/revolution.extension.parallax.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
    <script src="/amira/amira-creative-multipurpose-template/js/plugins/revolution/js/extensions/revolution.extension.video.min.js"></script>

    <!-- Main JS Initialization File -->
    <script src="/amira/amira-creative-multipurpose-template/js/custom.js"></script>

</body>

</html>